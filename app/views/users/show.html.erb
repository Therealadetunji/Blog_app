<div class="users-post">
<div>
<img src="<%= @user.photo %>"/>
</div>
<div class="info">
<h3> Name: <%= @user.name %></h3>
Postcounter: <%= @user.postcounter %>

<%= link_to "Add a post", new_post_path(current_user) %>

</div>
</div>

<div class="info">
<h4>Bio: </h4>
<h5><%= @user.bio %></h5>
</div>

<% @user.posts.each do |post| %>
<div class="info">
<%= link_to users_post_path(post.id) do %>
<h3>post<%= post.id %></h3>
<% end %>
<h4><%= post.title %></h4>
<h5><%= post.text %></h5>

<h6>Comments: <%= post.commentscounter %> Likes: <%= post.likescounter %></h6>
</div>
 <% end %>

<%= link_to users_posts_path() do %>
 <button class="btn">see all posts</button>
 <% end %>



